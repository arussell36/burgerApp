<h1>Eat Em Up!</h1>

<div class = "burgerContainer">
  <div class = "nonEaten">
    <h2>Fresh Cooked Burgers:</h2>
    <div class = "listWrapper">
      <ul>
        {{#each burgers}}
          {{#unless sleepy}}
            {{> burgers/burger-block sleep=true}}
          {{/unless}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class = "eaten">
    <h2>Consumed Burgers:</h2>
    <div class = "listWrapper">
      <ul>
        {{#each burgers}}
          {{#if sleepy}}
            {{> burgers/burger-block sleep=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class = "addBurgerContainer">
  <div>
    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
